<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/clasificacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteStrings"
    tools:context=".Clasificacion">

<ImageView
    android:id="@+id/imageView7"
    android:layout_width="73dp"
    android:layout_height="61dp"
    android:layout_marginStart="168dp"

    android:layout_marginLeft="168dp"
    android:layout_marginTop="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/liga" />

<Button
android:id="@+id/button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginEnd="64dp"
android:layout_marginRight="64dp"
android:background="#FFFFFF"
android:text="Regresar"
android:textColor="#000000"
app:layout_constraintBottom_toTopOf="@+id/imageView4"
app:layout_constraintEnd_toStartOf="@+id/imageView7"
app:layout_constraintTop_toTopOf="parent" />

<ImageView
android:id="@+id/imageView4"
android:layout_width="469dp"
android:layout_height="67dp"
android:layout_marginTop="72dp"
android:src="@android:drawable/screen_background_dark"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

<TextView
android:id="@+id/textView2"
android:layout_width="259dp"
android:layout_height="0dp"
android:layout_marginStart="72dp"
android:layout_marginLeft="72dp"
android:layout_marginTop="88dp"
android:fontFamily="monospace"
android:gravity="center"
android:shadowColor="#000000"
android:text="@string/Clasificacion1"
android:textColor="#FFFFFF"
android:textColorHighlight="#000000"
android:textColorHint="#000000"
android:textColorLink="#000000"
android:textSize="24sp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent" />

<ImageView
android:id="@+id/imageView8"
android:layout_width="match_parent"
android:layout_height="wrap_content"

android:background="@color/colorPrimaryDark"
android:src="@drawable/clasificacion"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/imageView4" />

<TextView
android:id="@+id/textView9"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/redWarn"
android:fontFamily="@font/contrail_one"
android:gravity="center"
android:text="@string/warn"
android:textColor="@color/whiteStrings"
android:textSize="57sp"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintTop_toBottomOf="@+id/imageView8" />


    </androidx.constraintlayout.widget.ConstraintLayout>